{
  "extends": "airbnb-base",
  "rules": {
    "no-underscore-dangle": [
      "error",
      { "allow": ["_id", "__filename", "__dirname"] }
    ],
    "no-console": ["error", { "allow": ["log"] }],
    "import/extensions": ["error", "ignorePackages"],
    "quotes": ["error", "double"]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
